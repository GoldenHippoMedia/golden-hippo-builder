{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@goldenhippo/builder-funnel-schemas": ["../../packages/builder-funnel-schemas/src/index.ts"],
      "@goldenhippo/builder-ui": ["../../packages/builder-ui/src/index.ts"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
